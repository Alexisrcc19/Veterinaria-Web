<div class="modal fade" id="modificarMascota" tabindex="-1" role="dialog" aria-labelledby="modalmascota" aria-hidden="true">
    <div class="modal-dialog modg-scrollable" role="document">
        <div class="modal-content">
            <div class="bg-success text-black">
                <center>
                    <h5 class="modal-title" id="modalpaciente">MODIFICAR MASCOTA</h5>
                </center>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="error1"></div>
                <form id="tablareg" method="POST" action="/actualizarMascota">
                    <input type="hidden" value="0" id="externalMa" name="externalMa" />
                    <input type="hidden" value="{{cliente.external_id}}" id="externalCliente" name="externalCliente" />
                    <div id="mensaje"></div>
                    <div class="form-group">
                        <div class="input-group">
