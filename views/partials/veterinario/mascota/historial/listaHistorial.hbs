<script src="/js/metodos.js"></script>
<section class="site-section bg-white " id="testimonials-section" data-aos="fade">
    <div class="container">
        <h1 class="text-center">{{title}}</h1>
        <div class="row">
            <div class="card" style="width:300px">
                <div class="card-header btn-succses">
                    <div class="card-title text-center">
                        <p class="card-text">
                        <h4>Datos Mascota</h4>
                        </p>
                    </div>
                </div>
                <div class="card-body">{{#each lista}}
                    <div class="form-group">
                        <a for="cedula">Nro. Historial:</a>
                        <input type="text" class="form-control" value="{{nro_historial}}" readonly>
                    </div>
                    <div class="form-group">
                        <a for="nombres">Nombre:</a>
                        <input type="text" class="form-control" value="{{nombre}}" readonly>
                    </div>
                    <div class="form-group">
                        <a for="direccion">Especie:</a>
                        <input type="text" class="form-control" value="{{especie}}" readonly>
                    </div>
                </div>{{/each}}
            </div>
            <div class="col-md-1"> </div>
            <div class="card" style="width:700px">
                <div class="card-header btn-succses">
                    <div class="card-title text-center">
                        <p class="card-text ">
                        <h6>LISTADO DE HISTORIAL  </h6>
                        </p>

                        <a href="" data-toggle="modal" class=" btn btn-outline-primary ml-auto float-left" title="Registrar" data-target="#registroHistorial">Nuevo <i class="fas fa-paw"></i></a>
                        {{!-- <a href="/listaCliente" data-tooltip="tooltip" data-placement="top" title="Regresar" class="float-right btn btn-succses btn-lg"><i class="fas fa-window-close"></i></a> --}}
                    </div>

                </div>
                <div class="card-body">
                    <div class="form-group">

                        <div class="row">
                            <form class="form-inline ml-auto">
                                <div class="form-group">
                                    <label for="">Criterio de Busqueda</label>
                                    <select class="form-control" name="criterio" id="criterio">
                                        <option value="todos">Todos</option>
                                        <option value="cedula">Cedula</option>
                                        <option value="apellidos">Apellidos</option>
                                    </select>
                                </div>

                                <button type="button" class=" btn btn-outline-dark btn-md my-0 ml-sm-2" id="btnbuscar">Buscar <i class="fas fa-search"></i></button>
                            </form>
                        </div>
                    </div>
                    <div class="form-group">
                        <table id="tabla" class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Nro</th>
                                    <th>Causa</th>
                                    <th>Estado</th>
                                    <th>Enfermedades</th>
                                    <th>Tratamiento</th>
                                </tr>
                            </thead>
                            {{#each listado as |list i|}}
                            <tr>
                                <td>
                                    {{i}}
                                </td>
                                <td>
                                    {{causa}}
                                </td>
                                <td>
                                    {{estado}}
                                </td>
                                <td>
                                    {{enfermedades}}
                                </td>
                                <td>
                                    {{tratamiento}}
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="#" data-toggle="modal" data-target="#modificarHistorial" data-tooltip="tooltip" data-placement="top" title="Editar" class=" btn-info btn-sm" onclick="llenardatosHistorial('{{external_id}}')"><i class="far fa-edit"></i></a>

                                    </div>
                                    </div>                                                                                
                                </td>
                            </tr>
                            {{/each}}
                            </tbody>   
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{> 'veterinario/mascota/historial/registrar'}}
{{> 'veterinario/mascota/historial/modificar'}}
