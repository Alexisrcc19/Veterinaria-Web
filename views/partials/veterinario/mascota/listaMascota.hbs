<script src="/js/metodos.js"></script>
<script>
    $(document).ready(function () {
        validarRegistro()
    });
</script>
<section class="site-section bg-white " id="testimonials-section" data-aos="fade">
    <div class="container">
        <div class="btn-group">
            <a href="/listaclientes" data-tooltip="tooltip" data-placement="top" title="REGRESAR" class="btn btn-outline-primary btn-sm"><i class="fas fa-arrow-left fa-2x"></i></a>
        </div>
        <h1 class="text-center">{{title}}</h1>
        <div class="row">
            <div class="card" style="width:300px">
                <div class="card-header btn-succses">
                    <div class="card-title text-center">
                        <p class="card-text">
                            <h4>Datos Cliente</h4><input type="hidden" value="{{cliente.id}}" id="idCliente" name="idCliente" />
                        </p>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="cedula">Cedula</label>
                        <input type="text" class="form-control" value="{{cliente.cedula}}" readonly>
                    </div>
                    <div class="form-group">
                        <label for="nombres">Nombres:</label>
                        <input type="text" class="form-control" value="{{cliente.nombres}} {{cliente.apellidos}} " readonly>
                    </div>
                    <div class="form-group">
                        <label for="direccion">Direccion:</label>
                        <input type="text" class="form-control" value="{{cliente.direccion}}" readonly>
                    </div>
                </div>
            </div>
            <div class="col-md-1"> </div>
            <div class="card" style="width:700px">
                <div class="card-header btn-succses">
                    <div class="card-title text-center">
                        <div class="card-header bg-light">
                            <h5>LISTADO DE MASCOTAS</h5>
                        </div>
                        <br>
                        <a href="#" class="btn btn-outline-primary ml-auto float-right" data-toggle="modal" data-target="#registroMascota">NUEVO <i class="fas fa-dog"></i></a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <table id="tablaLMascota" class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Nro</th>
                                    <th>Mascota</th>
                                    <th>Raza</th>
                                    <th>Especie</th>
                                    <th>Sexo</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each listaM}}
                                <tr>
                                    <td>
                                        {{1}}
                                    </td>
                                    <td>
                                        {{nombre}}
                                    </td>
                                    <td>
                                        {{raza}}
                                    </td>
                                    <td>
                                        {{especie}}
                                    </td>
                                    <td>
                                        {{sexo}}
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="#" data-toggle="modal" data-target="#modificarMascota" data-tooltip="tooltip" data-placement="top" title="Editar" class=" btn-info btn-sm" onclick="llenardatosMascota('{{external_id}}')"><i class="far fa-edit"></i></a>

                                        </div>
                                        <div class="btn-group">
                                            <a href="/veterinario/mascota/listaHistorial/{{external_id}}/{{persona.external_id}}" data-tooltip="tooltip" data-placement="top" title="Registro Historial" class="btn-warning btn-sm"><i class="far fa-calendar-alt"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{> 'veterinario/mascota/registro'}}
{{> 'veterinario/mascota/modificar'}}
{{> 'veterinario/mascota/historial/registrar'}}