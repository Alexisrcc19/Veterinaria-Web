<script src="/js/metodos.js"></script>
<script>
    $(document).ready(function () {
        validarRegistro()
    });
</script>
<section class="site-section bg-white " id="testimonials-section" data-aos="fade">
    <div class="container">
        <h1 class="text-center">{{title}}</h1>
        <div class="row">
            <div class="card" style="width:300px">
                <div class="card-header btn-succses">
                    <div class="card-title text-center">
                        <p class="card-text">
                            <h4>Datos Cliente</h4>
                        </p>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="cedula">Cedula</label>
                        <input type="text" class="form-control" value="{{cliente.cedula}}" readonly>
                    </div>
                    <div class="form-group">
                        <label for="nombres">Nombres:</label>
                        <input type="text" class="form-control" value="{{cliente.nombres}} {{cliente.apellidos}}" readonly>
                    </div>
                    <div class="form-group">
                        <label for="direccion">Direccion:</label>
                        <input type="text" class="form-control" value="{{cliente.direccion}}" readonly>
                    </div>
                </div>
            </div>
            <div class="col-md-1"> </div>
            <div class="card" style="width:700px">
                <div class="card-header btn-succses">
                    <div class="card-title text-center">
                        <p class="card-text ">
                            <h6>LISTADO DE MASCOTAS </h6>
                        </p>

                        <a href="" data-toggle="modal" class=" btn btn-outline-primary ml-auto float-left" title="Registrar" data-target="#registroMascota">Nuevo <i class="fas fa-paw"></i></a>
                        {{!-- <a href="/listaCliente" data-tooltip="tooltip" data-placement="top" title="Regresar" class="float-right btn btn-succses btn-lg"><i class="fas fa-window-close"></i></a> --}}
                    </div>

                </div>
                <div class="card-body">
                    <div class="form-group">

                        <div class="row">
                            <form class="form-inline ml-auto">
                                <div class="form-group">
                                    <label for="">Criterio de Busqueda</label>
                                    <select class="form-control" name="criterio" id="criterio">
                                        <option value="todos">Todos</option>
                                        <option value="cedula">Cedula</option>
                                        <option value="apellidos">Apellidos</option>
                                    </select>
                                </div>

                                <button type="button" class=" btn btn-outline-dark btn-md my-0 ml-sm-2" id="btnbuscar">Buscar <i class="fas fa-search"></i></button>
                            </form>
                        </div>
                    </div>
                    <div class="form-group">
                        <table id="tabla" class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Nro</th>
                                    <th>Mascota</th>
                                    <th>Raza</th>
                                    <th>Especie</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each listaM}}
                                <tr>
                                    <td>
                                    </td>
                                    <td>
                                        {{nombre}}
                                    </td>
                                    <td>
                                        {{raza}}
                                    </td>
                                    <td>
                                        {{especie}}
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="#" data-toggle="modal" data-target="#modificarMascota" data-tooltip="tooltip" data-placement="top" title="Editar" class=" btn-info btn-sm" onclick="visualizarModificar({{external_id}})"><i class="far fa-edit"></i></a>

                                        </div>
                                        {{!-- <div class="btn-group">
                                            <a href="#" data-toggle="modal" data-target="#registroHistorial" data-tooltip="tooltip" data-placement="top" title="Editar" class=" btn-info btn-sm" onclick="visualizarModificar({{external_id}})"><i class="far fa-calendar"></i></a>

                                        </div> --}}
                                        <div class="btn-group">
                                            <a href="/veterinario/mascota/listaHistorial" data-tooltip="tooltip" data-placement="top" title="Registrar Mascota" class="btn-warning btn-sm"><i class="far fa-calendar-alt"></i></a>
                                        </div>

                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{> 'veterinario/mascota/registro'}}
{{> 'veterinario/mascota/modificar'}}
{{> 'veterinario/mascota/historial/registrar'}}