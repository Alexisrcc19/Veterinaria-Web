    <div class="modal-dialog modg-scrollable" role="document">
        <div class="modal-content">
            <div class="card-header bg-succses">
                <div class="card-title text-center">
                    <p class="card-text ">ACTUALIZAR CLIENTE</p>
                </div>
            </div>
           
            <div class="modal-body">
                <div id="error1"></div>
                <form id="tablareg" method="POST" action="/actualizar">
                    <input type="hidden" value="0" id="externalM" name="externalM" />
                    <div id="mensaje"></div>
                    <ul class="nav nav-tabs">
                        <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#dcM">Cliente</a></li>
                        <li class="nav-item"><a class="nav-link " data-toggle="tab" href="#dmM">Cuenta </a></li>
                    </ul>
                    <div class="tab-content">
