<script src="/js/metodos.js"></script>
<script>
    $(document).ready(function () {
        validarRegistro()
    });
</script>


<section class="site-section bg-light block-13" id="testimonials-section" data-aos="fade">
    <div class="container">
        <div class="card">
            <div class="card-header bg-succses">
                LISTADO DE CLIENTES
                <a href="#" class="btn btn-outline-primary ml-auto float-right" data-toggle="modal" data-target="#ModalMascota">NUEVO <i class="fas fa-user-plus"></i></a>
            </div>
            <div class="card-body">
                <div class="form-group">

                    <div class="row">
                        <form class="form-inline ml-auto">
                            <div class="form-group">
                                <label for="">Criterio de Busqueda</label>
                                <select class="form-control" name="criterio" id="criterio">
                                    <option value="todos">Todos</option>
                                    <option value="cedula">Cedula</option>
                                    <option value="apellidos">Apellidos</option>
                                </select>
                            </div>

                            <button type="button" class="btn btn-outline-dark btn-md my-0 ml-sm-2" id="btnbuscar">Buscar <i class="fas fa-search"></i></button>
                        </form>
                    </div>
                </div>
                <div class="form-group">
                    <div class="table-responsive">
                        <table id="tabla" class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Nro</th>
                                    <th>Cedula</th>
                                    <th>Cliente</th>
                                    <th>Direccion</th>
                                    <th>Telefono</th>
                                    <th>Acciones</th>

                                </tr>
                            </thead>
                            <tbody>
                                {{#each lista as |lis i|}}
                                <tr>
                                    <td>
                                        {{i}}
                                    </td>
                                    <td>
                                        {{cedula}}
                                    </td>
                                    <td>
                                        {{nombres}} {{apellidos}}
                                    </td>
                                    <td>
                                        {{direccion}}
                                    </td>
                                    <td>
                                        {{telefono}}
                                    </td>

                                    <td>
                                        <div class="btn-group">
                                            <button type="button" data-toggle="modal" data-target="#modificarCliente" data-tooltip="tooltip" data-placement="top" title="Editar" class="btn-danger btn-sm" onclick="llenardatosCliente('{{external_id}}')"><i class="fa fa-edit"></i></button>
                                        </div>
                                        <div class="btn-group">
                                            
                                            <a href="/registroMascota/{{external_id}}" data-tooltip="tooltip" data-placement="top" title="Registrar Mascota" class="btn-warning btn-sm"><i class="fas fa-dog"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{> 'veterinario/cliente/registro'}}
{{> 'veterinario/cliente/modificar'}}