<script src="/js/metodos.js"></script>
<script>
    $().ready(function () {
        validarcomentario();
    });
</script>
<section class="banner_area d-flex text-center">
    <div class="container"> 
        <div> 
            <div class="container" style="margin-top: 20px;">    
                <div class="panel panel-primary">
                    <h1>Datos del Veterinario</h1>
                    <div class="form-group">
                        <div class="label label-danger" style="font-size: 20px; color: #b21f2d;"> 
                            {{msg.error}}
                        </div>
                    </div>
                    <br>
                    <div class="panel-body">
                        <div style="padding-left:200px; padding-right: 200px">
                            <form id="formulario"  method="POST" action="/registroComentario">
                                <!-- Tab panes -->
                                <label for="veterinario">Seleccione el veterinario:</label>
                                <div class="btn-group" style="padding-bottom: 15px">
                                    <select class="form-control" name="veterinario" id="veterinario" aria-describedby="espeHelp">
                                        {{#each listado}}
                                        <option value="{{external_id}}">{{nombres}} {{apellidos}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="comentario">Escriba su comentario:</label>
                                    <textarea class="form-control" id="comentario" name="comentario"  placeholder="Ingrese su comentario"  rows="4" cols="20">
                                    </textarea>
                                </div>
                                <div class="modal-footer">                                    
                                    <button type="submit" class="btn btn-primary">Registrar</button>
                                    <a href="/" class="btn btn-danger">Cancelar</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>



</section>
