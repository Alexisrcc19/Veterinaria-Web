<div class="card">
    
    <div class="card-header bg-succses">
        LISTADO DE CLIENTE-MASCOTA
    </div>
    <div class="card-body">
        <div class="form-group">
            <a href="#" class="btn btn-success" data-toggle="modal" data-target="#ModalMascota"><i
                    class="fas fa-user-plus"></i></a>
            <div class="row">
                <form class="form-inline ml-auto">
                    <div class="form-group">
                        <label for="">Criterio de Busqueda</label>
                        <select class="form-control" name="criterio" id="criterio">
                            <option value="todos">Todos</option>
                            <option value="cedula">Cedula</option>
                            <option value="apellidos">Apellidos</option>
                        </select>
                    </div>

                    <button type="button" class="btn btn-success btn-md my-0 ml-sm-2" id="btnbuscar">Buscar <i
                            class="fas fa-search"></i></button>
                </form>
            </div>
        </div>
        <div class="form-group">

            <table id="tabla" class="table">
                <thead>
                    <tr>
                        <th>Nro</th>
                        <th>Cedula</th>
                        <th>Cliente</th>
                        <th>Mascota</th>
                        <th>Raza</th>
                        <th>Especie</th>
                        <th>Acciones</th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
</div>
<!-- PARA GUARDAR PACIENTE--->
<div class="modal fade" id="ModalMascota" tabindex="-1" role="dialog" aria-labelledby="modalpaciente"
    aria-hidden="true">
    <div class="modal-dialog modg-scrollable" role="document">
        <div class="modal-content">
            <div class="bg-success text-black">
                <center>
                    <h5 class="modal-title" id="modalpaciente">REGISTRAR CLIENTE-MASCOTA</h5>
                </center>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="error1"></div>
                <form id="tablareg" method="POST" action="/registro/mascota">
                    <input type="hidden" value="0" id="external" name="external" />
                    <div id="mensaje"></div>
                    <ul class="nav nav-tabs">

                        <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#dc">Cliente</a></li>
                        <li class="nav-item"><a class="nav-link " data-toggle="tab" href="#dm">Mascota </a></li>
                    </ul>
                    <div class="tab-content">
                        {{!-- MODAL-CLIENTE --}}
                        <div role="tabpanel" class="tab-pane active" id="dc">
                            <div class="form-group">
                                <label for="cedula">Cedula</label>
                                <input type="text" class="form-control" id="cedula" name="cedula"
                                    placeholder="Ingrese su cedula">
                            </div>
                            <div class="form-group">
                                <label for="nombres">Nombres:</label>
                                <input type="text" class="form-control" id="nombres" name="nombres"
                                    placeholder="Ingrese sus nombres">

                            </div>
                            <div class="form-group">
                                <label for="apellidos">Apellidos:</label>
                                <input type="text" class="form-control" id="apellidos" name="apellidos"
                                    placeholder="Ingrese sus apellidos">

                            </div>
                            <div class="form-group">
                                <label for="direccion">Direccion:</label>
                                <input type="text" class="form-control" id="direccion" name="direccion"
                                    placeholder="Ingrese su direccion">

                            </div>
                            <div class="form-group">
                                <label class="fas fa-phone-volume" for="telefono">Telefono:</label>
                                <input type="text" class="form-control " id="telefono" name="telefono"
                                    placeholder="Ingrese su telefono">
                            </div>

                        </div>

                        <div role="tabpanel" class="tab-pane" id="dm">
                            <div class="form-group">
                                <label for="nombre">Nombre</label>
                                <input type="text" class="form-control" id="nombre" name="nombre"
                                    placeholder="Ingrese su nombre">
                            </div>
                            <div class="form-group">
                                <label for="raza">Raza:</label>
                                <input type="text" class="form-control" id="raza" name="raza"
                                    placeholder="Ingrese sus raza">
                            </div>
                            <div class="form-group">
                                <label for="edad">Edad:</label>
                                {{!-- agregar iconos --}}
                                <div class="input-group">
                                    <input type="number"  class="form-control" id="edad" name="edad"
                                        placeholder="Ingrese edad">
                                </div>
                            </div>
                            <label for="edad">Tipo:</label>

                            <div class="btn-group" style="padding-bottom: 15px">

                                <select class="form-control" aria-describedby="espeHelp">
                                    <option>TIPO</option>
                                    <option value="domestica">Domestica</option>
                                    <option value="granja">Granja</option>
                                    <option value="salvaje">Salvaje</option>

                                </select>

                            </div>

                            <div class="form-group">

                                <label>Especie:</label>
                                <input type="label" class="form-control" id="especie"
                                    placeholder="ejemplo: (perro, gato, vaca, pato)">
                            </div>
                            <div class="modal-footer">
                                <button type="button" id="btncancelar" class="btn btn-danger"
                                    data-dismiss="modal">Cerrar</button>

                                <button type="submit" id="guardar" class="btn btn-info">GUARDAR<i
                                        class="far fa-edit"></i></button>
                            </div>
                        </div>

                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
