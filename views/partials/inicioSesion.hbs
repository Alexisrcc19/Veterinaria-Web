<section class="banner_area d-flex text-center">

    <div class="container">
        <div class="frame">


            <div style="font-size: 20px; color: #b21f2d;"> 
                {{msg.error}}
            </div>
            <div style="font-size: 20px; color: green;"> 
                {{msg.ok}}
            </div>

                    
            <form class="form-signin" action="/inicio_sesion" method="POST"> 
                            <h1 style="padding-top: 40px">Iniciar Sesion</h1>

                <p>Selecione con que cuenta desea ingresa:</p>
                <div style="padding-left:120px"> <select name="persona" class="form-group" style="padding: 10px">
                        <option value="veterinario">Veterinario</option>
                        <option value="usuario">Cliente</option>
                    </select></div>               

                <div class="form-group">
                    <input type="text" placeholder="Correo" class="form-styling" name="correo">
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Clave" class="form-styling" name="clave">
                </div>
                <button type="submit" class="btn btn-primary">Iniciar sesion</button>
                <a href="/" class="btn btn-danger">Cancelar</a>

            </form>
        </div>
    </div>
</section>