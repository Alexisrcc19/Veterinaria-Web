<script src="/js/metodos.js"></script>
<script>
    $(document).ready(function () {
        validarRegistro();
    });
</script>

<section class="site-section bg-light block-13" id="testimonials-section" data-aos="fade">
    <div class="container">
        <div class="card">
            <div class="card-header bg-succses">
                {{title}}
                <a href="#" class="btn btn-outline-primary ml-auto float-right" data-toggle="modal" data-target="#ModalServicio">NUEVO <i class="fas fa-edit"></i></a>
            </div>
            <div class="card-body">
                <div class="form-group">

                    <div style="font-size: 20px; color: #b21f2d;"> 
                        {{msg.error}}
                    </div>
                    <div style="font-size: 20px; color: green;"> 
                        {{msg.ok}}
                    </div>
                    <div style="font-size: 20px; color: green;"> 
                        {{msg.info}}
                    </div>
                </div>
                <div class="form-group">
                    <div class="table-responsive">
                        <table id="tablaLServicio" class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Nro</th>
                                    <th>Nombre</th>
                                    <th>Tipo de Pago</th>
                                    <th>Valor</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                               {{#each lista as |lis i|}}
                                <tr>
                                    <td>
                                        {{i}}
                                    </td>
                                    <td>
                                        {{nombre}}
                                    </td>
                                    <td>
                                        {{formaPago}}
                                    </td>
                                    <td>
                                        {{valor}}
                                    </td>

                                    <td>
                                        <div class="btn-group">
                                            <button type="button" data-toggle="modal" data-target="#modificarServicio" data-tooltip="tooltip" data-placement="top" title="Editar" class="btn-danger btn-sm" onclick="llenardatosServicio('{{id}}')"><i class="fa fa-edit"></i></button>
                                        </div>
                                    </td>
                                </tr>
                               {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{> 'servicio/registro'}}
{{> 'servicio/modificar'}}
